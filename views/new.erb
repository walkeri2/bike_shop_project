<h1>Add Bike</h1>

<form method="post" action="/bikeshop/inventory">

<div class="form-wrapper">

    <div class="form-el">
      <label for="name">Name:</label>
      <input id="name" type="text" name="name" />
    </div>

    <div class="form-el">
      <label for="bike-type">Type:</label>
      <select id="type-select" name="type">
        <option value="road">Road</option>
        <option value="mountain">Mountain</option>
        <option value="gravel">Gravel</option>
      </select>
    </div>

    <div class="form-el">
      <label for="bike-manufacturer">Manufacturer:</label>
        <select id="manufacturer-select"        name="manufacturer_id">
          <% @manufacturer.each do |manufacturer| %>
          <option value=<%= manufacturer.id %>><%=       manufacturer.name %>
          </option>
          <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="cost">Cost:</label>
        <input id="cost" type="number" name="cost" />
    </div>

    <div class="form-el">
      <label for="quantity">Quantity:</label>
      <input id="quantity" type="number" name="quantity" />
    </div>

    <div class="add-button">
      <input type="submit"  value="Add Bike">
    </div>
  </div>
</form>
