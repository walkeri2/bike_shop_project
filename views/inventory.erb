<h1>Inventory</h1>

<div class="filter-buttons">
<form method="get" action="/bikeshop/inventory/bymanufacturer">
   <select id=â€œbike-by-manufacturer-select" name="manufacturer_id">
    <%for manufacturer in @manufacturer%>
    <option value="<%=manufacturer.id%>"> <%=manufacturer.name%> </option>
    <% end %>
   </select>
   <input type="submit" value="Filter by manufacturer">
  </form>

  <form method="get" action="/bikeshop/inventory">
    <input type="submit" value="Show All Bikes">
    </form>
</div>

<div class="bike-list">

  <% for bike in @bikes %>

  <p>Name: <%= bike.name %> </p>
  <p>Type: <%= bike.type %> </p>
  <p>Manufacturer: <%= bike.manufacturer.name %></p>
  <p>Cost: <%= bike.cost %> </p>
  <p>Quantity: <%= bike.quantity %> </p>

  <form action="/bikeshop/inventory/<%= bike.id %>/delete" method="POST"><input type="submit" value="Delete"></form>
<hr>
  <% end %>

</div>














